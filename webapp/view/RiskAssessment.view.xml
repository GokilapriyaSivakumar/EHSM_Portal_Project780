<mvc:View controllerName="ehsm.controller.RiskAssessment"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page id="riskPage" title="Risk Assessment" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="riskTable" items="{path: '/Z780_RISK', parameters: {expand: ''}}" growing="true" growingThreshold="20" width="auto">
               <headerToolbar>
                    <Toolbar>
                        <Title text="Risks" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Risk ID"/></Column>
                    <Column><Text text="Plant"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Description"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Category"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Severity"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Likelihood"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Mitigation"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Date"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created By"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{RiskId}"/>
                            <Text text="{Plant}"/>
                            <Text text="{RiskDescription}"/>
                            <Text text="{RiskCategory}"/>
                            <ObjectStatus text="{RiskSeverity}" state="{path: 'RiskSeverity', formatter: '.formatter.severityState'}"/> 
                            <!-- I'll add a local formatter logic or simple binding. The user asked for clean UI alignment. -->
                            <!-- Let's just use Text for now unless I define a formatter. I'll stick to Text to be safe or add formatter in controller. -->
                            <Text text="{Likelihood}"/>
                            <Text text="{MitigationMeasures}"/>
                            <Text text="{path: 'RiskIdentificationDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MMM dd, yyyy' }}"/>
                            <Text text="{CreatedBy}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
