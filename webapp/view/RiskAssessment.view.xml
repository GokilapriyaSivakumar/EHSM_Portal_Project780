<mvc:View controllerName="ehsm.controller.RiskAssessment"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page id="riskPage" title="Risk Assessment" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="riskTable" items="{path: '/Z780_RISK', parameters: {expand: ''}}" growing="true" growingThreshold="20" width="auto">
               <headerToolbar>
                    <Toolbar>
                        <Title text="Risks" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Risk Key Ref"/></Column>
                    <Column><Text text="Team Member"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Role"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Regulation"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Created On"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created By"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{RiskKeyRef}"/>
                            <Text text="{TeamMember}"/>
                            <Text text="{Role}"/>
                            <Text text="{Regulation}"/>
                            <Text text="{path: 'CreatedOn', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MMM dd, yyyy' }}"/>
                            <Text text="{CreatedBy}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
