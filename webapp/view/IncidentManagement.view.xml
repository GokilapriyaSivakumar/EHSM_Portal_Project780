<mvc:View controllerName="ehsm.controller.IncidentManagement"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page id="incidentPage" title="Incident Management" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="incidentTable" items="{path: '/Z780_INCIDENT', parameters: {expand: ''}}" growing="true" growingThreshold="20" width="auto">
               <headerToolbar>
                    <Toolbar>
                        <Title text="Incidents" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Incident ID"/></Column>
                    <Column><Text text="Plant"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Description"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Category"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Priority"/></Column>
                    <Column><Text text="Status"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Date &amp; Time"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Completion Date"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created By"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{IncidentId}"/>
                            <Text text="{Plant}"/>
                            <Text text="{IncidentDescription}"/>
                            <Text text="{IncidentCategory}"/>
                            <Text text="{IncidentPriority}"/>
                            <ObjectStatus text="{IncidentStatus}" state="{path: 'IncidentStatus', formatter: '.formatter.statusState'}" />
                            <VBox>
                                <Text text="{path: 'IncidentDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MMM dd, yyyy' }}"/>
                                <Text text="{path: 'IncidentTime', type: 'sap.ui.model.type.Time', formatOptions: { pattern: 'HH:mm:ss' }}" class="sapUiTinyMarginTop"/>
                            </VBox>
                            <Text text="{path: 'CompletionDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MMM dd, yyyy' }}"/>
                            <Text text="{CreatedBy}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
