<mvc:View controllerName="ehsm.controller.IncidentManagement"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page id="incidentPage" title="Incident Management" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="incidentTable" items="{path: '/Z780_INCIDENT', parameters: {expand: ''}}" growing="true" growingThreshold="20" width="auto">
               <headerToolbar>
                    <Toolbar>
                        <Title text="Incidents" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Incident ID"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Title"/></Column>
                    <Column><Text text="Plant ID"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Location"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Group"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Category"/></Column>
                    <Column><Text text="Status"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created On"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created By"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{IncidentID}"/>
                            <Text text="{Title}"/>
                            <Text text="{PlantID}"/>
                            <Text text="{Location}"/>
                            <Text text="{IncidentGroup}"/>
                            <Text text="{IncidentCategory}"/>
                            <ObjectStatus text="{IncidentRecordStatus}" state="{path: 'IncidentRecordStatus', formatter: '.formatter.statusState'}" />
                            <Text text="{path: 'CreatedOn', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MMM dd, yyyy' }}"/>
                            <Text text="{CreatedBy}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
